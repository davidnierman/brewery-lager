{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{brewery.open_brewery_db_id}}
        </h2>
        {% if brewery.visited %}
            <h3>Visited: Yes</h3>
        {% else %}
            <h3>Visited: Not Yet</h3>
        {% endif %}
            <a href="/examples/{{ example.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/examples/{{ example.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
    </article>
</div>
<table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Tasting Notes</th>
        <th scope="col">Date Tasted</th>
      </tr>
    </thead>
    <tbody>
        {% for beer in beers%}
            <tr>
                <th scope="row">{{beer.name}}</th>
                <td> {{beer.name}} </td>
                <td> {{beer.type}} </td>
                <td> {{beer.tasting_notes}} </td>
                <td> {{beer.date_tasted}} </td>
            </tr>
        {% endfor %}
    </tbody>
  </table>  

<!-- I will need to pass the value of the brewery ID to this form -->
<a href="/beer/{{brewery.id}}/create">
    <h3> Add New Beer Tasted</h3>
</a>

{% endblock %}